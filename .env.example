# Code Tumbler — Environment Variables
# Copy to .env and fill in your values:  cp .env.example .env

# ── Database ─────────────────────────────────────────────────
DATABASE_URL=postgresql://tumbler:changeme@localhost:5432/tumbler

# ── Local LLM Providers ─────────────────────────────────────
VLLM_BASE_URL=http://localhost:8000
OLLAMA_BASE_URL=http://localhost:11434

# ── Cloud API Keys (leave blank if not using) ───────────────
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# ── Custom / Self-Hosted Endpoint ───────────────────────────
# e.g., Open WebUI proxy to a local vLLM backend
CUSTOM_API_KEY=

# ── Tumbler Tuning ──────────────────────────────────────────
MAX_ITERATIONS=10
QUALITY_THRESHOLD=8.0
PROJECT_TIMEOUT_SECONDS=3600

# ── Logging ─────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=logs/tumbler.log

# ── Networking / CORS ───────────────────────────────────────
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
